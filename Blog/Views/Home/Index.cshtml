@{
    ViewBag.Title = "Home Page";
}

@model List<Blog.Models.Posts>

<section class="row">
    @foreach (var post in Model)
    {
        <article class="post col-md-6">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Posted on: <i>@post.Date</i>
                <br /> <br />
            </div>
            <div class="body">
                <p>
                   @Html.Raw(post.Body)
                </p>
            </div>
        </article>
    }
</section>

    
